---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

const photos = [
  {
    title: 'Caribbean Dive',
    description: 'Perfect visibility for reef exploring off St. Martin.',
    image: '/images/StMartinScuba1.jpeg',
  },
  {
    title: 'Bird Sanctuary Friend',
    description: 'Made a feathered friend at the St. Martin Bird Sanctuary.',
    image: '/images/SedonaJackBird1.jpeg',
  },
  {
    title: 'St. Barth Vista',
    description: 'Found this hidden viewpoint while hiking the island.',
    image: '/images/StBarthView.jpeg',
  },
  {
    title: 'Villa Morning View',
    description: 'Breakfast spot at the St. Martin villa.',
    image: '/images/VillaView.jpeg',
  },
  {
    title: 'Underwater World',
    description: 'Another perfect day diving in the Caribbean.',
    image: '/images/StMartinScuba2.jpeg',
  },
  {
    title: 'Island Paths',
    description: 'Exploring the hidden corners of St. Martin.',
    image: '/images/WalkwayJack2.jpeg',
  },
  {
    title: 'Fresh Catch',
    description: 'Enjoying the local seafood specialties.',
    image: '/images/LobsterJack.jpeg',
  },
  {
    title: 'Sushi Creation',
    description: 'Mastering the art of sushi rolling.',
    image: '/images/Sushi1.jpeg',
  },
  {
    title: 'Culinary Adventures',
    description: 'Experimenting with new recipes in Sedona.',
    image: '/images/SedonaCooking.jpeg',
  },
  {
    title: 'NOLA Gardens',
    description: 'Peaceful morning in New Orleans City Park.',
    image: '/images/NolaPark1.jpeg',
  },
  {
    title: 'Park Reflections',
    description: 'Beautiful water features in NOLA.',
    image: '/images/NolaPark2.jpeg',
  },
  {
    title: 'Art Deco Details',
    description: 'Architectural beauty in New Orleans.',
    image: '/images/NolaBathroom.jpeg',
  },
  {
    title: 'Sushi Plating',
    description: 'The final presentation makes all the difference.',
    image: '/images/Sushi2.jpeg',
  },
  {
    title: 'Beach Club Vibes',
    description: 'Perfect day at Nikki Beach.',
    image: '/images/NikkiBeach.jpeg',
  }
];
---

<Layout
  title="Photos | Jack Sechler"
  description="Personal photography showcasing travel adventures, culinary experiences, and underwater exploration from the Caribbean to New Orleans."
>
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="bg-white/80 dark:bg-gray-800/80 rounded-2xl shadow-xl p-8 backdrop-blur-sm">
      <h1 class="text-4xl font-bold mb-8 gradient-text">Photography</h1>
      
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {photos.map((photo, index) => (
          <div 
            class="group relative aspect-[4/3] rounded-xl overflow-hidden transform hover:scale-105 transition-all duration-500 hover:shadow-2xl hover:shadow-blue-500/20"
            style={`animation: fadeIn 0.5s ease-out forwards ${index * 0.2}s`}
          >
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-purple-500/20 z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <img
              src={photo.image}
              alt={photo.title}
              loading="lazy"
              class="absolute inset-0 w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-6 group-hover:translate-y-0 transition-transform duration-300">
                <h2 class="text-xl font-semibold text-white mb-2">{photo.title}</h2>
                <p class="text-gray-200 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">{photo.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
</style>