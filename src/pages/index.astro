---
import Layout from '../layouts/Layout.astro';

const featuredProjects = [
  {
    title: 'Pixar Films Analytics Dashboard',
    description: 'Interactive Power BI dashboard analyzing 30 years of Pixar films with box office performance and critical acclaim metrics.',
    image: '/images/PixarDashboardCombined.jpeg',
    tags: ['Power BI', 'SQL'],
    link: 'https://mavenanalytics.io/project/29361',
  },
  {
    title: 'Coffee Shop Analytics Dashboard',
    description: 'Power BI dashboard analyzing consumer preferences and demographics for strategic marketing insights.',
    image: '/images/CoffeeDashboard.jpg',
    tags: ['Power BI', 'SQL'],
    link: 'https://mavenanalytics.io/project/13067',
  },
  {
    title: 'Rock Paper Scissors Game',
    description: 'Python game with multiple AI strategies demonstrating object-oriented programming principles.',
    image: '/images/SelectPlayerPic.jpg',
    tags: ['Python', 'OOP'],
    link: 'https://github.com/jsech3/Udacity-IntroToProgrammingND/blob/main/RockPaperScissorsGame/rps.py',
  },
];
---

<Layout title="Jack Sechler | Portfolio">
  <div class="relative isolate">
    <!-- Background gradient -->
    <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80">
      <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-teal-500 to-purple-500 opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]" 
           style="animation: pulse 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;"></div>
    </div>

    <div class="px-6 pt-14 lg:px-8">
      <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
        <div class="text-center">
          <h1 class="text-4xl font-bold tracking-tight sm:text-6xl mb-8 gradient-text animate-gradient">
            Hi, I'm Jack Sechler
          </h1>
          <div class="relative animate-float">
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-teal-500/20 to-purple-500/20 blur-xl"></div>
            <p class="relative text-lg leading-8 text-gray-800 dark:text-gray-300 bg-white/90 dark:bg-gray-800/90 rounded-xl p-6 shadow-xl backdrop-blur-sm">
              Data Analyst and Business Intelligence specialist with a passion for transforming data into actionable insights.
              Experienced in SQL, Power BI, and data visualization, helping businesses make data-driven decisions.
            </p>
          </div>
          
          <div class="mt-10 flex flex-col items-center space-y-6">
            <div class="flex items-center justify-center gap-x-6">
              <a href="/projects" 
                 class="rounded-xl bg-gradient-to-r from-teal-500 to-purple-500 px-5 py-3 text-sm font-semibold text-white shadow-lg hover:opacity-90 transition-all duration-200 hover:scale-105">
                View My Work
              </a>
              <a href="/contact" 
                 class="text-sm font-semibold leading-6 text-gray-800 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors duration-200">
                Contact Me <span aria-hidden="true" class="group-hover:translate-x-1 transition-transform duration-200">â†’</span>
              </a>
            </div>

            <div class="flex space-x-6 mt-8">
              <a href="mailto:jsechh@gmail.com" 
                 class="text-gray-600 dark:text-gray-400 hover:text-teal-600 dark:hover:text-teal-400 transform hover:scale-110 transition-all duration-200">
                <span class="sr-only">Email</span>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </a>
              <a href="https://www.linkedin.com/in/jack-sechler/" target="_blank" rel="noopener noreferrer"
                 class="text-gray-600 dark:text-gray-400 hover:text-teal-600 dark:hover:text-teal-400 transform hover:scale-110 transition-all duration-200">
                <span class="sr-only">LinkedIn</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
              <a href="https://github.com/jsechler" target="_blank" rel="noopener noreferrer"
                 class="text-gray-600 dark:text-gray-400 hover:text-teal-600 dark:hover:text-teal-400 transform hover:scale-110 transition-all duration-200">
                <span class="sr-only">GitHub</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Featured Projects Section -->
    <div class="px-6 py-16 lg:px-8 bg-white/50 dark:bg-gray-900/50">
      <div class="mx-auto max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold tracking-tight sm:text-4xl gradient-text mb-4">Featured Projects</h2>
          <p class="text-lg text-gray-600 dark:text-gray-400">Showcasing data analytics and business intelligence solutions</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {featuredProjects.map((project, index) => (
            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="group relative bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:shadow-teal-500/20 dark:hover:shadow-purple-500/20 transition-all duration-300 hover:scale-105"
              style={`animation: fadeInUp 0.6s ease-out forwards ${index * 0.15}s; opacity: 0;`}
            >
              <div class="relative aspect-video overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-teal-500/20 to-purple-500/20 z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                  loading="lazy"
                />
              </div>

              <div class="p-6">
                <div class="flex flex-wrap gap-2 mb-3">
                  {project.tags.map(tag => (
                    <span class="px-2 py-1 text-xs rounded-full bg-teal-100 dark:bg-teal-900 text-teal-800 dark:text-teal-200">
                      {tag}
                    </span>
                  ))}
                </div>

                <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors">
                  {project.title}
                </h3>

                <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2">
                  {project.description}
                </p>

                <div class="mt-4 inline-flex items-center text-teal-600 dark:text-teal-400 text-sm font-semibold group-hover:translate-x-1 transition-transform duration-300">
                  View Project
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>

        <div class="text-center mt-12">
          <a
            href="/projects"
            class="inline-flex items-center px-6 py-3 rounded-xl border-2 border-teal-500 text-teal-600 dark:text-teal-400 font-semibold hover:bg-teal-500 hover:text-white transition-all duration-200 hover:scale-105"
          >
            View All Projects
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom gradient -->
    <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]">
      <div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-teal-500 to-purple-500 opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]"
           style="animation: pulse 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;"></div>
    </div>
  </div>
</Layout>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.5;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>